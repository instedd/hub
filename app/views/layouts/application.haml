- content_for :html_title do
  InSTEDD Platform datasets and actions integrations

- content_for :app_name do
  InSTEDD HUB

- content_for :app_logo do
  = image_tag "instedd-bootstrap/header/logos/guisso.png"

- content_for :app_version do
  = Hub::Application.config.version_name

- top_nav_bar do
  - top_nav_bar_item 'Home', root_path
  - if current_user
    - top_nav_bar_item 'Connectors', connectors_path, (params[:controller] == 'connectors')
    - top_nav_bar_item 'Tasks', event_handlers_path, (params[:controller] == 'event_handlers')
    - top_nav_bar_item 'Activity', activities_path, (params[:controller] == 'activities')

= render template: 'instedd/application'
